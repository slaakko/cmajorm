    // naive implementation...
    public constexpr nothrow U Factorial<U>(U n) where U is UnsignedInteger
    {
        U f = 1u;
        for (U u = 2u; u <= n; ++u)
        {
            f = f * u;
        }
        return f;
    }

    public constexpr nothrow T Gcd<T>(T a, T b) where T is EuclideanSemiring
    {
        while (true)
        {
            if (b == T(0)) return a;
            a = a % b;
            if (a == T(0)) return b;
            b = b % a;
        }
    }

    public nothrow bool NextPermutation<I>(I begin, I end) where I is BidirectionalIterator and I.ValueType is LessThanComparable
    {
        if (begin == end)
        {
            return false;
        }
        I i = begin;
        ++i;
        if (i == end)
        {
            return false;
        }
        i = end;
        --i;
        while (true)
        {
            I ii = i;
            --i;
            if (*i < *ii)
            {
                I j = end;
                --j;
                while (*i >= *j)
                {
                    --j;
                }
                Swap(*i, *j);
                Reverse(ii, end);
                return true;
            }
            if (i == begin)
            {
                Reverse(begin, end);
                return false;
            }
        }
    }

    public nothrow bool NextPermutation<I, R>(I begin, I end, R r) where I is BidirectionalIterator and R is Relation and R.Domain is I.ValueType
    {
        if (begin == end)
        {
            return false;
        }
        I i = begin;
        ++i;
        if (i == end)
        {
            return false;
        }
        i = end;
        --i;
        while (true)
        {
            I ii = i;
            --i;
            if (r(*i, *ii))
            {
                I j = end;
                --j;
                while (!r(*i, *j))
                {
                    --j;
                }
                Swap(*i, *j);
                Reverse(ii, end);
                return true;
            }
            if (i == begin)
            {
                Reverse(begin, end);
                return false;
            }
        }
    }

    public nothrow bool PrevPermutation<I>(I begin, I end) where I is BidirectionalIterator and I.ValueType is LessThanComparable
    {
        if (begin == end)
        {
            return false;
        }
        I i = begin;
        ++i;
        if (i == end)
        {
            return false;
        }
        i = end;
        --i;
        while (true)
        {
            I ii = i;
            --i;
            if (*ii < *i)
            {
                I j = end;
                --j;
                while (*j >= *i)
                {
                    --j;
                }
                Swap(*i, *j);
                Reverse(ii, end);
                return true;
            }
            if (i == begin)
            {
                Reverse(begin, end);
                return false;
            }
        }
    }

    public nothrow bool PrevPermutation<I, R>(I begin, I end, R r) where I is BidirectionalIterator and R is Relation and R.Domain is I.ValueType
    {
        if (begin == end)
        {
            return false;
        }
        I i = begin;
        ++i;
        if (i == end)
        {
            return false;
        }
        i = end;
        --i;
        while (true)
        {
            I ii = i;
            --i;
            if (r(*ii, *i))
            {
                I j = end;
                --j;
                while (!r(*j, *i))
                {
                    --j;
                }
                Swap(*i, *j);
                Reverse(ii, end);
                return true;
            }
            if (i == begin)
            {
                Reverse(begin, end);
                return false;
            }
        }
    }
    
    public nothrow inline void InitRand(uint seed)
    {
        RtInitRand(seed);
    }
    
    public nothrow inline uint Random()
    {
        return RtRandom();
    }
    
    public nothrow inline ulong Random64()
    {
        return RtRandom64();
    }

    public nothrow inline uint RandomNumber(uint n)
    {
        return Random() % n;
    }
    
    public nothrow void RandomShuffle<I>(I begin, I end) where I is RandomAccessIterator
    {
        if (begin == end) return;
        for (I i = begin + 1; i != end; ++i)
        {
            long d = (i - begin) + 1;
            long r = cast<long>(RandomNumber(cast<uint>(d)));
            I j = begin + r;
            Swap(*i, *j);
        }
    }
