    public inline void StrCopy(char* buf, const char* from)
    {
        if (buf == null)
        {
            ThrowInvalidParameterException();
        }
        if (from != null)
        {
            while (*from != '\0')
            {
                *buf++ = *from++;
            }
        }
        *buf = '\0';
    }

