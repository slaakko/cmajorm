    public inline long StrCopy(char* buf, const char* from, long length)
    {
        long resultLen = 0;
        if (buf == null)
        {
            ThrowInvalidParameterException();
        }
        if (from != null)
        {
            while (resultLen < length)
            {
                if (*from == '\0')
                {
                    break;
                }
                *buf++ = *from++;
                ++resultLen;
            }
        }
        *buf = '\0';
        return resultLen;
    }

