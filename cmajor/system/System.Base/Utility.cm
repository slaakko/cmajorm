namespace System
{
    public constexpr inline long Align(long n, long alignment)
    {
        if (alignment <= 0)
        {
            ThrowInvalidParameterException();
        }
        return (n + alignment - 1) & -alignment;
    }

    public constexpr nothrow inline long StrLen(const char* s)
    {
        long len = 0;
        if (s != null)
        {
            while (*s != '\0')
            {
                ++len;
                ++s;
            }
        }
        return len;
    }

