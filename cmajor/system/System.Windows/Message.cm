            map[WM_MOUSEWHEEL] = "WM_MOUSEWHEEL";
            map[WM_MOUSELEAVE] = "WM_MOUSELEAVE";
            map[WM_CLIPBOARDUPDATE] = "WM_CLIPBOARDUPDATE";
            map[WM_USER] = "WM_USER";
        }
        private static UniquePtr<MessageNameMap> instance;
        private HashMap<uint, string> map;
