            defaultListBoxSize = defaultListBoxSize_;
        }
        public nothrow inline const Size& DefaultCheckBoxSize() const
        {
            return defaultCheckBoxSize;
        }
        public nothrow void SetDefaultCheckBoxSize(const Size& defaultCheckBoxSize_)
