using System;
using System.Collections;

namespace System.Windows
{
    public class Panel : ContainerControl
    {
        public Panel(const Point& location, const Size& size, Dock dock, Anchors anchors) :
            base("System.Windows.Panel", WindowClassStyle.CS_DEFAULT, cast<WindowStyle>(WindowStyle.WS_CHILD | WindowStyle.WS_VISIBLE | WindowStyle.WS_CLIPSIBLINGS),
                ExtendedWindowStyle.WS_EX_DEFAULT, GetSystemColor(SystemColor.COLOR_MENU),
                "panel", location, size, dock, anchors)
        {
        }
        protected override void OnPaint(PaintEventArgs& args)
        {
            try
            {
                base->OnPaint(args);
                args.graphics.Clear(BackgroundColor());
            }
            catch (const Exception& ex)
            {
                MessageBox.Show(ex.Message());
            }
        }
    }
}
