    // Dot product of vectors u and v:

    public nothrow float Dot(const Vector& u, const Vector& v)
    {
        return u.x * v.x + u.y * v.y;
    }

    public nothrow float ProjectionFactor(const Vector& a, const Vector& b)
    {
