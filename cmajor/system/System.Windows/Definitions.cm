    public class WinRect
    {
        public nothrow WinRect() : left(0), top(0), right(0), bottom(0)
        {
        }
        public nothrow WinRect(int left_, int top_, int right_, int bottom_) : left(left_), top(top_), right(right_), bottom(bottom_)
        {
        }
        public int left;
        public int top;
        public int right;
        public int bottom;
    }
    
    public enum WindowState : sbyte
