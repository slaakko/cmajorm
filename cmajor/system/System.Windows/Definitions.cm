    public class Padding
    {
        public nothrow Padding() : left(0), top(0), right(0), bottom(0)
        {
        }
        public nothrow Padding(int left_, int top_, int right_, int bottom_) : left(left_), top(top_), right(right_), bottom(bottom_)
        {
        }
        public nothrow inline int Vertical() const
        {
            return top + bottom;
        }
        public nothrow inline int Horizontal() const
        {
            return left + right;
        }
        public int left;
        public int top;
        public int right;
        public int bottom;
    }

    public bool operator==(const Padding& left, const Padding& right)
    {
        return left.left == right.left && left.top == right.top && left.right == right.right && left.bottom == right.bottom;
    }
