    public class Coding
    {
        public nothrow Coding(const string& coding_) : coding(coding_), quality(1)
        {
        }
        public nothrow Coding(const string& coding_, double quality_) : coding(coding_), quality(quality_)
        {
        }
        public default virtual ~Coding();
        public HttpFieldValue ToHttpFieldValue() const
        {
            if (quality == 1)
            {
                return HttpFieldValue(coding);
            }
            else
            {
                HttpFieldValue result(coding);
                result.SetParameter("q", ToString(quality, 3));
                return result;
            }
        }
        private string coding;
        private double quality;
    }
    
