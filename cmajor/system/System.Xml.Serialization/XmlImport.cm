                    {
                        Node* node = (*nodeSet)[i];
                        if (node is Element*)
                        {
                            Element* element = cast<Element*>(node);
                            list.Add(XmlPtr<T>());
                            XmlPtr<T>& ptr = list.Back();
                            ustring value = element->GetAttribute(u"value");
