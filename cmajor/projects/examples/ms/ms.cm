using System;
using System.Threading;

public int Run(const string& command, string& errorLines)
{
    Process process(command);
    errorLines = process.ReadToEnd(Process.StdHandle.std_err);
    process.WaitForExit();
    int exitCode = process.ExitCode();
    return exitCode;
}

int main(int argc, const char** argv)
{
    try
    {
        TimePoint start = Now();
        string command;
        for (int i = 1; i < argc; ++i)
        {
            string arg = argv[i];
            if (!command.IsEmpty())
            {
                command.Append(' ');
            }
            command.Append(arg);
        }
        string errorLines;
        int exitCode = Run(command, errorLines);
        if (exitCode != 0)
        {
            throw Exception("executing command '" + command + "' failed with exit code " + ToString(exitCode) + ": " + errorLines);
        }
        TimePoint end = Now();
        Duration dur = end - start;
        Console.Out() << "executing command '" + command << "' took " << dur.Milliseconds() << " ms" << endl();
        Console.Out() << "command returned exit code: " << exitCode << endl();
    }
    catch (const Exception& ex)
    {
        Console.Error() << ex.Message() << endl();
        return 1;
    }
    return 0;
}
