        public override nothrow void BeginComputeLivenessAndNextUse()
        {
            base->BeginComputeLivenessAndNextUse();
            Pair<Liveness, Value*>* p = parent->GetCurrentLivenessAndNextUse(callee);
            if (p != null)
            {
