                throw Exception("error: the first operand type '" + leftPtr->type->Name() + "' and second operand type '" + rightPtr->type->Name() + " in the " + Name() + " instruction at line " + ToString(line) + " must be the same pointer type");
            }
            if (!(type is IntegerType*))
            {
                throw Exception("error: the result type '" + type->Name() + "' in the " + Name() + " instruction at line " + ToString(line) + " must be an integer type");
            }
        }
        public Value* leftPtr;
        public Value* rightPtr;
    }

    public class ArgInstruction : Instruction
