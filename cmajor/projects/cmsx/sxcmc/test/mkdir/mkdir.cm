using System;
using System.Os;

public void PrintUsage()
{
    Console.Out() << 
        "Usage: mkdir <path>" << endl() <<
        "Create directory <path>." << endl();
}

int main(int argc, const char** argv)
{
    try
    {
        if (argc != 2)
        {
            PrintUsage();
            return 1;
        }
        Mkdir(argv[1]);
    }
    catch (const Exception& ex)
    {
        Console.Error() << ex.ToString() << endl();
        return 1;
    }
    return 0;
}
