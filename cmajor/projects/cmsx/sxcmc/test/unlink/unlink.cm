using System;
using System.Os;

void PrintUsage()
{
    Console.Out() << "Usage: unlink <path>" << endl();
}

int main(int argc, const char** argv)
{
    try
    {
        if (argc != 2)
        {
            PrintUsage();
            return 1;
        }
        Unlink(argv[1]);
    }
    catch (const Exception& ex)
    {
        Console.Error() << ex.Message() << endl();
        return 1;
    }
    return 0;
}
