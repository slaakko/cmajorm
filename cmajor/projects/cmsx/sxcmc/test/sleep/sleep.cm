using System;

int main()
{
    try
    {
        Console.WriteLine("sleeping...");
        TimePoint start = Now();
        Sleep(Duration.FromSeconds(3));
        TimePoint end = Now();
        Duration duration = end - start;
        Console.WriteLine("wake up: " + ToString(duration.Milliseconds()));
    }
    catch (const Exception& ex)
    {
        Console.Error() << ex.ToString() << endl();
        return 1;
    }
    return 0;
}
