using System;
using System.Os;

int main()
{
    try
    {
        char c;
        long result = Read(0, &c, 1);
        while (result > 0)
        {
            result = Write(1, &c, result);
            if (result > 0)
            {
                result = Read(0, &c, 1);
            }
        }
    }
    catch (const Exception& ex)
    {
        string s = ex.ToString();
        write(2, s.Chars(), s.Length());
        return 1;
    }
    return 0;
}
