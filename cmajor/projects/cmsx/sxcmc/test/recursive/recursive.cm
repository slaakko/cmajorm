using System;

void recurse(int level)
{
    byte[4096] array;
    Console.Out() << "in level " << level << " stack size is " << level * 4096 << " bytes." << endl();
    recurse(level + 1);
}

int main()
{
    try
    {
        recurse(1);
    }
    catch (const Exception& ex)
    {
        Console.Error() << ex.Message() << endl();
        return 1;
    }
    return 0;
}
