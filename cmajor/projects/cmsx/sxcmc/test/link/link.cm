using System;
using System.Os;

void PrintUsage()
{
    Console.Out() << "Usage: link <sourcePath> <targetPath>" << endl();
}

int main(int argc, const char** argv)
{
    try
    {
        if (argc != 3)
        {
            PrintUsage();
            return 1;
        }
        const char* sourcePath = argv[1];
        const char* targetPath = argv[2];
        Link(sourcePath, targetPath);
    }
    catch (const Exception& ex)
    {
        Console.Error() << ex.Message() << endl();
        return 1;
    }
    return 0;
}
