using System;
using System.Collections;
using System.Os;

int main(int argc, const char** argv)
{
    try
    {
        List<string> args;
        for (int i = 1; i < argc; ++i)
        {
            string arg = argv[i];
            args.Add(arg);
        }
        int pid = Fork();
        if (pid == 0)
        {
            Exec("/bin/echo", args);
        }
        ushort exitCode = 0u;
        pid = Wait(&exitCode);
        if (exitCode != 0u)
        {
            throw Exception("exec: echo (" + ToString(pid) + ") returned " + ToString(exitCode));
        }
        else
        {
            Console.Out() << "exec: echo (" << pid << ") exited" << endl();
        }
    }
    catch (const Exception& ex)
    {
        Console.Error() << ex.ToString() << endl();
        return 1;
    }
    return 0;
}
