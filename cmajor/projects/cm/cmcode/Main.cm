        private DefinitionSourceLocation GetCurrentLocation() const
        {
            DefinitionSourceLocation sourceLocation;
            if (solution.IsNull()) return sourceLocation;
            TabPage* tabPage = codeTabControl->SelectedTabPage();
            if (tabPage != null)
            {
                Cm.Views.Editor* editor = GetEditorByTabPage(tabPage);
                if (editor != null)
                {
                    if (editor is Cm.Views.CmajorEditor*)
                    {
                        Cm.Views.CmajorEditor* cmajorEditor = cast<Cm.Views.CmajorEditor*>(editor);
                        SourceCodeView* sourceCodeView = cmajorEditor->GetSourceCodeView();
                        if (sourceCodeView != null)
                        {
                            sourceLocation.file = cmajorEditor->FilePath();
                            int line = sourceCodeView->CaretLine();
                            int column = sourceCodeView->CaretColumn();
                            sourceLocation.line = line;
                            sourceLocation.scol = column;
                            sourceLocation.ecol = column;
                        }
                    }
                }
            }
            return sourceLocation;
        }
        public void GotoLocation(const DefinitionSourceLocation& location)
        {
            TabPage* tabPage = codeTabControl->GetTabPageByKey(location.file);
            Cm.Views.CmajorEditor* cmajorEditor = null;
            if (tabPage != null)
            {
                Cm.Views.Editor* editor = GetEditorByTabPage(tabPage);
                if (editor is Cm.Views.CmajorEditor*)
                {
                    cmajorEditor = cast<Cm.Views.CmajorEditor*>(editor);
                }
                tabPage->Select();
            }
            if (cmajorEditor == null)
            {
                HashMap<string, TreeViewNodeData*>.ConstIterator it = solutionExplorerData->treeViewDataMap.CFind(location.file);
                if (it != solutionExplorerData->treeViewDataMap.CEnd())
                {
                    TreeViewNodeData* data = it->second;
                    cmajorEditor = AddCmajorEditor(data->fileName, data->key, data->filePath);
                }
                else
                {
                    cmajorEditor = AddCmajorEditor(Path.GetFileName(location.file), location.file, location.file);
                }
            }
            if (cmajorEditor != null)
            {
                Cm.Views.CmajorSourceCodeView* sourceCodeView = cmajorEditor->GetSourceCodeView();
                if (sourceCodeView != null)
                {
                    int line = location.line;
                    int scol = location.scol;
                    int ecol = location.ecol;
                    Selection selection;
                    selection.start.line = line;
                    selection.start.column = scol;
                    selection.end.line = line;
                    selection.end.column = ecol;
                    sourceCodeView->EnsureLineVisible(line);
                    sourceCodeView->SetSelection(selection);
                    sourceCodeView->SetCaretLineCol(line, scol);
                }
            }
        }
