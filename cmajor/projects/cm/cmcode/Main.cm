        private void HandleParseSourceReply(ParseSourceReply* reply)
        {
            try
            {
                parseSourceRequestInProgress = false;
                GetOutputLogView()->Clear();
                GetOutputTabPage()->Select();
                string logMessage = "source parsed:";
                if (reply->ok)
                {
                    TimePoint now = Now();
                    int errorCount = cast<int>(reply->errors.Count());
                    logMessage.Append("\n").Append(ToString(errorCount)).Append(" errors");
                    if (errorCount > 0)
                    {
                        logMessage.Append(":");
                        bool insertNL = true;
                        for (const string& error : reply->errors)
                        {
                            if (insertNL)
                            {
                                logMessage.Append("\n");
                            }
                            string uncapedError = Unescape(error);
                            logMessage.Append(uncapedError);
                            if (!uncapedError.EndsWith("\n"))
                            {
                                insertNL = true;
                            }
                            else
                            {
                                insertNL = false;
                            }
                        }
                    }
                    if (reply->synchronized)
                    {
                        logMessage.Append("\n(synchronized)");
                    }
                    if (!reply->cursorContainer.IsEmpty())
                    {
                        logMessage.Append("\ncursor container: " + reply->cursorContainer);
                    }
                    string dispatchRequest = "\ndispatch request: " + DurationStr(reply->requestReceived - reply->requestCreated);
                    string requestReceived = "\nrequest received: " + DurationStr(reply->created - reply->requestReceived);
                    string parsing = "\nparsing: " + DurationStr(reply->endParsing - reply->startParsing);
                    string total = "\ntotal: " + DurationStr(now - reply->requestCreated);
                    LogView* logView = Application.GetLogView();
                    if (logView != null)
                    {
                        string times = "parse:";
                        times.Append(dispatchRequest).Append(requestReceived).Append(parsing).Append(total);
                        logView->WriteLine(times);
                    }
                    GetOutputLogView()->WriteLine(logMessage);
                }
                else
                {
                    string error = reply->error;
                    GetOutputLogView()->WriteLine(Unescape(error));
                }
                Application.ProcessMessages();
            }
            catch (const Exception& ex)
            {
                MessageBox.Show(ex.Message(), "Error", null, cast<MessageBoxType>(MessageBoxType.MB_OK | MessageBoxType.MB_ICONSTOP));
                LogException(ex);
            }
        }
