        protected override void OnWindowClosing(bool& cancelClose)
        {
            try
            {
                if (!buildService.IsNull())
                {
                    buildService->Quit();
                    buildService.Reset();
                }
                if (!debugService.IsNull())
                {
                    debugService->Stop();
                    debugService.Reset();
                }
                if (!codeCompletionService.IsNull())
                {
                    codeCompletionService->Stop(true);
                    codeCompletionService.Reset();
                }
                if (!CloseSolution())
                {
                    cancelClose = true;
                    return;
                }
                Application.SetLogView(null);
                Cm.Views.Bitmaps.Instance().Clear();
                base->OnWindowClosing(cancelClose);
                MainConfiguration.Instance().Save(true);
            }
            catch (const Exception& ex)
            {
                MessageBox.Show(ex.Message());
                LogException(ex);
            }
        }
        protected override void OnTimer(TimerEventArgs& args)
        {
            try
            {
                switch (args.timerId)
                {
                    case saveConfigurationTimerId:
                    {
                        MainConfiguration.Instance().Save(false);
                        break;
                    }
                    case startCodeCompletionServiceTimerId:
                    {
                        KillTimer(startCodeCompletionServiceTimerId);
                        const EditorSettings& editorSettings = MainConfiguration.Instance().GetEditorSettings();
                        if (editorSettings.useCodeCompletion)
                        {
                            GetCodeCompletionService();
                        }
                        break;
                    }
                    case codeCompletionParseTimerId:
                    {
                        const EditorSettings& editorSettings = MainConfiguration.Instance().GetEditorSettings();
                        if (editorSettings.useCodeCompletion)
                        {
                            CodeCompletionParse();
                        }
                        break;
                    }
                }
            }
            catch (const Exception& ex)
            {
            }
        }
