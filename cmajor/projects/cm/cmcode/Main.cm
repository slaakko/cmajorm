        public void GotoDefinition(Cm.Ast.Project* project, const string& identifier, const DefinitionSourceLocation& sourceLocation)
        {
            try
            {
                string backend = GetBackend();
                string config = GetConfig();
                BuildGuard buildGuard(this);
                GetDefinitionRequest request;
                request.projectName = ToUtf8(project->Name());
                request.projectFilePath = project->FilePath();
                request.identifier = identifier;
                request.backend = backend;
                request.config = config;
                request.identifierLocation = sourceLocation;
                GetDefinitionReply reply = GetBuildService().ProcessGetDefinitionRequest(request);
                if (reply.ok)
                {
                    locations.AddLocation(GetCurrentLocation());
                    locations.AddLocation(reply.definitionLocation);
                    locations.GotoPreviousLocation(GetCurrentLocation());
                }
                else
                {
                    throw Exception(reply.error);
                }
            }
            catch (const Exception& ex)
            {
                MessageBox.Show(ex.Message(), "Error", null, cast<MessageBoxType>(MessageBoxType.MB_OK | MessageBoxType.MB_ICONSTOP));
                LogException(ex);
            }
        }
