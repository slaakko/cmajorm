        private CodeCompletionService& GetCodeCompletionService()
        {
            if (!codeCompletionServerStarting && !codeCompletionService.IsNull())
            {
                if (!codeCompletionService->ServerRunning())
                {
                    GetOutputTabPage()->Select();
                    GetOutputLogView()->WriteLine("Code completion service started but code completion server not running, stopping code completion service...");
                    codeCompletionService->Stop(true);
                    codeCompletionService.Reset();
                    GetOutputTabPage()->Select();
                    GetOutputLogView()->WriteLine("Code completion service stopped.");
                }
            }
            if (codeCompletionService.IsNull())
            {
                codeCompletionServerStarting = true;
                codeCompletionService.Reset(new CodeCompletionService(MakeCodeCompletionServiceArgs()));
                codeCompletionService->SetCodeCompletionServerStartNotificationFunction(CodeCompletionServerStarted);
                codeCompletionService->SetCodeCompletionServerStopNotificationFunction(CodeCompletionServerStopped);
                codeCompletionService->SetLogMessageNotificationFunction(CodeCompletionServiceLogMessagesAvailable);
                codeCompletionService->SetCodeCompletionReplyHandlerFunction(CodeCompletionReplyHandler);
                codeCompletionService->Start();
            }
            return *codeCompletionService;
        }
