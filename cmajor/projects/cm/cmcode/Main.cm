        private void CodeCompletionParse()
        {
            try
            {
                const EditorSettings& editorSettings = MainConfiguration.Instance().GetEditorSettings();
                if (!editorSettings.useCodeCompletion) return;
                if (codeCompletionServerStarting || parseSourceRequestInProgress) return;
                if (!solutionExplorerData.IsNull())
                {
                    TabPage* selectedTabPage = codeTabControl->SelectedTabPage();
                    Cm.Views.Editor* editor = GetEditorByTabPage(selectedTabPage);
                    if (editor != null)
                    {
                        string sourceFilePath = editor->FilePath();
                        if (sourceFilePath.EndsWith(".cm"))
                        {
                            TextView* textView = editor->GetTextView();
                            if (textView != null)
                            {
                                if (textView->IsCCDirty())
                                {
                                    textView->ResetCCDirty();
                                    TreeViewNodeData* nodeData = solutionExplorerData->GetTreeViewNodeDataByKey(sourceFilePath);
                                    if (nodeData != null)
                                    {
                                        Cm.Ast.Project* project = nodeData->project;
                                        if (!loadEditModuleRequestSent)
                                        {
                                            LoadEditModule(project->FilePath());
                                        }
                                        UniquePtr<ParseSourceRequest> request(new ParseSourceRequest(project->FilePath(), GetBackend(), GetConfig(), sourceFilePath));
                                        request->sourceCode = textView->GetCursorText();
                                        GetCodeCompletionService().PutRequest(request.Release());
                                        parseSourceRequestInProgress = true;
                                    }
                                }
                            }
                        }
                    }
                }
            }
            catch (const Exception& ex)
            {
                MessageBox.Show(ex.Message(), "Error", null, cast<MessageBoxType>(MessageBoxType.MB_OK | MessageBoxType.MB_ICONSTOP));
                LogException(ex);
            }
        }
