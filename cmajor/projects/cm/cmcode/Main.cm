        private void StopDebuggingClick()
        {
            try
            {
                if (!Debugging()) return;
                stopPending = false;
                if (Application.RunningModal())
                {
                    stopPending = true;
                    GetConsole()->SetEof();
                }
                else
                {
                    StopDebugGuard debugGuard(this);
