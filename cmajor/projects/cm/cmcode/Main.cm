        private void CodeCompletionReplyHandler(CodeCompletionReply* reply)
        {
            void* replyPtr = reply;
            ulong replyVal = cast<ulong>(replyPtr);
            long lparam = cast<long>(replyVal);
            WinSendMessage(Handle(), WM_CODE_COMPLETION_REPLY, 0u, lparam);
        }
        protected override bool ProcessMessage(Message& message)
        {
            base->ProcessMessage(message);
            if (message.msg == WM_CODE_COMPLETION_REPLY)
            {
                void* replyPtr = cast<void*>(cast<ulong>(message.lparam));
                UniquePtr<CodeCompletionReply> reply(cast<CodeCompletionReply*>(replyPtr));
                if (reply.Get() is LoadEditModuleReply*)
                {
                    HandleLoadEditModuleReply(cast<LoadEditModuleReply*>(reply.Get()));
                }
                else if (reply.Get() is ResetEditModuleCacheReply*)
                {
                    HandleResetEditModuleCacheReply(cast<ResetEditModuleCacheReply*>(reply.Get()));
                }
                else if (reply.Get() is ParseSourceReply*)
                {
                    HandleParseSourceReply(cast<ParseSourceReply*>(reply.Get()));
                }
                else if (reply.Get() is GetCCListReply*)
                {
                    HandleGetCCListReply(cast<GetCCListReply*>(reply.Get()));
                }
                else if (reply.Get() is GetOverloadListReply*)
                {
                    HandleGetOverloadListReply(cast<GetOverloadListReply*>(reply.Get()));
                }
                SetFocusToEditor();
                message.result = 0;
                return true;
            }
            else if (message.msg == WM_CODE_COMPLETION_SERVICE_FETCH_LOG_MESSAGES)
            {
                FetchCodeCompletionServiceLogMessages();
                message.result = 0;
                return true;
            }
            return false;
        }
        private void HandleLoadEditModuleReply(LoadEditModuleReply* reply)
        {
            try
            {
                GetOutputLogView()->Clear();
                TimePoint now = Now();
                string dispatchRequest = "\ndispatch request: " + DurationStr(reply->requestReceived - reply->requestCreated);
                string requestReceived = "\nrequest received: " + DurationStr(reply->created - reply->requestReceived);
                string started = "\nstarted: " + DurationStr(reply->startLoading - reply->created);
                string loading;
                string parsing;
                if (reply->result == "up-to-date")
                {
                    loading = "\nloading: " + DurationStr(reply->endLoading - reply->startLoading);
                    parsing = "\nparsing: " + DurationStr(reply->endLoading - reply->endLoading);
                }
                else
                {
                    loading = "\nloading: " + DurationStr(reply->startParsing - reply->startLoading);
                    parsing = "\nparsing: " + DurationStr(reply->endLoading - reply->startParsing);
                }
                string dispatchReply = "\ndispatch reply: " + DurationStr(now - reply->endLoading);
                string total = "\ntotal: " + DurationStr(now - reply->requestCreated);
                string logMessage;
                if (reply->result == "error")
                {
                    logMessage = reply->result;
                    logMessage.Append(": ").Append(reply->error);
                }
                else
                {
                    logMessage = reply->key;
                    logMessage.Append(" ").Append(reply->result);
                }
                GetOutputTabPage()->Select();
                GetOutputLogView()->WriteLine(logMessage);
                LogView* logView = Application.GetLogView();
                if (logView != null)
                {
                    string times = "load ";
                    times.Append(reply->key).Append(" ").Append(reply->result);
                    times.Append(dispatchRequest).Append(requestReceived).Append(started).Append(loading).Append(parsing).Append(dispatchReply).Append(total);
                    logView->WriteLine(times);
                }
                Application.ProcessMessages();
            }
            catch (const Exception& ex)
            {
                MessageBox.Show(ex.Message(), "Error", null, cast<MessageBoxType>(MessageBoxType.MB_OK | MessageBoxType.MB_ICONSTOP));
                LogException(ex);
            }
        }
