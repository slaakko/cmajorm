        private void EditorCCTextChanged(bool allowEmpty)
        {
            bool hideCodeCompletionList = true;
            try
            {
                const EditorSettings& editorSettings = MainConfiguration.Instance().GetEditorSettings();
                if (!editorSettings.useCodeCompletion) return;
                ustring ccText;
                TabPage* selectedTabPage = codeTabControl->SelectedTabPage();
                Cm.Views.Editor* editor = GetEditorByTabPage(selectedTabPage);
                if (editor != null)
                {
                    if (editor is Cm.Views.CmajorEditor*)
                    {
                        Cm.Views.CmajorEditor* cmajorEditor = cast<Cm.Views.CmajorEditor*>(editor);
                        string sourceFilePath = cmajorEditor->FilePath();
                        TreeViewNodeData* nodeData = solutionExplorerData->GetTreeViewNodeDataByKey(sourceFilePath);
                        if (nodeData != null)
                        {
                            Cm.Ast.Project* project = nodeData->project;
                            SourceCodeView* sourceCodeView = cmajorEditor->GetSourceCodeView();
                            if (sourceCodeView != null)
                            {
                                ccText = sourceCodeView->GetCCText();
                                if (allowEmpty || !ccText.IsEmpty())
                                {
                                    long lparenPos = ccText.Find('(');
                                    if (lparenPos == -1)
                                    {
                                        UniquePtr<GetCCListRequest> request(new GetCCListRequest(project->FilePath(), GetBackend(), GetConfig(), sourceFilePath, ToUtf8(ccText)));
                                        GetCodeCompletionService().PutRequest(request.Release());
                                        hideCodeCompletionList = false;
                                    }
                                    else
                                    {
                                        if (CountParens(ccText) == 1)
                                        {
                                            if (!ccOverloadListFetched && !ccFunctionGroup.IsEmpty())
                                            {
                                                ccOverloadListFetched = true;
                                                UniquePtr<GetOverloadListRequest> request(new GetOverloadListRequest(project->FilePath(), GetBackend(), GetConfig(), ccFunctionGroup));
                                                GetCodeCompletionService().PutRequest(request.Release());
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
                LogView* logView = Application.GetLogView();
                if (logView != null)
                {
                    logView->WriteLine("cc: " + ToUtf8(ccText));
                }
            }
            catch (const Exception& ex)
            {
                MessageBox.Show(ex.Message(), "Error", null, cast<MessageBoxType>(MessageBoxType.MB_OK | MessageBoxType.MB_ICONSTOP));
                LogException(ex);
            }
            ccFunctionGroup.Clear();
            if (hideCodeCompletionList)
            {
                HideCodeCompletionList();
            }
        }
