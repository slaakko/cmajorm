            if (mainWindowWindowState == JsonWindowState.normal)
            {
                return System.Windows.WindowState.normal;
            }
            else if (mainWindowWindowState == JsonWindowState.maximized)
            {
                return System.Windows.WindowState.maximized;
            }
            else
            {
                return System.Windows.WindowState.normal;
