using System;
using System.IO;

namespace cmcode
{
    public void LogException(const Exception& ex)
    {
        try
        {
            StreamWriter errorWriter = File.CreateText("error.txt");
            errorWriter << ex.ToString() << endl();
        }
        catch (const Exception&)
        {
        }
    }
}
