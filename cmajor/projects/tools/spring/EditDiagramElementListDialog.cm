            operationList->Add(operationElement);
            GetListBox()->AddItem(operationName);
            operationNameTextBox->Clear();
            selectedIndex = -1;
            GetDeleteButton()->Disable();
            GetMoveUpButton()->Disable();
            GetMoveDownButton()->Disable();
