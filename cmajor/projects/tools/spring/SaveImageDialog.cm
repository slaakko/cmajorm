            bmpRadioButton = bmpRadioButtonPtr.Get();
            bmpRadioButton->CheckedChangedEvent().AddHandler(FormatRadioButtonStateChanged);
            formatGroupBox->AddChild(bmpRadioButtonPtr.Release());
