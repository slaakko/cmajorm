using System;
using System.Collections;
using System.IO;
using paths;

int main(int argc, const char** argv)
{
    try
    {
        int mode = -1;
        List<string> files;
        for (int i = 1; i < argc; ++i)
        {
            string arg = argv[i];
            if (arg.StartsWith("--"))
            {
                if (arg == "--help")
                {
                    PrintHelp();
                    return 1;
                }
                else
                {
                    throw Exception("unknown option '" + arg + "'");
                }
            }
            else if (arg.StartsWith("-"))
            {
                string options = arg.Substring(1);
                if (options.IsEmpty())
                {
                    throw Exception("unknown option '" + arg + "'");
                }
                else 
                {
                    bool unknown = false;
                    string uo;
                    for (char o : options)
                    {
                        switch (o)
                        {
                            case 'h':
                            {
                                PrintHelp();
                                return 1;
                            }
                            default:
                            {
                                unknown = true; 
                                uo.Append(o);
                                break;
                            }
                        }
                        if (unknown)
                        {
                            throw Exception("unknown option '-" + uo + "'");
                        }
                    }
                }
            }
            else
            {
                if (mode == -1)
                {
                    if (arg.Length() < 3)
                    {
                        throw Exception("invalid mode argument: three or more octal digits expected");
                    }
                    for (char o : arg)
                    {
                        if (o < '0' || o > '7')
                        {
                            throw Exception("invalid mode argument: octal digits expected");
                        }
                    }
                    mode = cast<int>(ParseOctal(arg));
                }
                else
                {
                    files.Add(GetFullPath(arg));
                }
            }
        }
        if (files.IsEmpty())
        {
            throw Exception("no files specified");
        }
        if (!HasEnv("SHELL"))
        {
            files = Expand(files);
        }
        ChangeMode(mode, files);
    }
    catch (const Exception& ex)
    {
        Console.Error() << ex.ToString() << endl();
        return 1;
    }
    return 0;
}
