public cdecl nothrow double pow(double x, double y)
{
    long lx = *cast<long*>(cast<void*>(&x));
    long ly = *cast<long*>(cast<void*>(&y));
    long result = trap(0u, trap_pow, 0u, lx, ly);
    return *cast<double*>(cast<void*>(&result));
}

