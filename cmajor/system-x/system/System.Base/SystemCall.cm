public cdecl nothrow void exit(byte exitCode)
{
    run_at_exits();
    trap(0u, trap_exit, 0u, exitCode);
}

public cdecl nothrow long memory_page_size()
{
    return cast<long>(trap(0u, trap_memory_page_size, 0u));
}

