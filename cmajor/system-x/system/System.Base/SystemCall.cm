public enum OpenFlags : int
{
    none = 0,
    read = 1 << 0,
    write = 1 << 1,
    create = 1 << 2,
    append = 1 << 3,
    truncate = 1 << 4,
    text = 1 << 5,
    random_access = 1 << 6
}

